generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id             String        @id @default(uuid())
  name           String
  email          String
  role           Role
  password       String
  avatar         String?
  Organisation   Organisation? @relation(fields: [organisationId], references: [id])
  organisationId String?
}

model Organisation {
  id     String  @id @default(uuid())
  name   String
  domain String?
  logo   String?
  users  User[]
}
